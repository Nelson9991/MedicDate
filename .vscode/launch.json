{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/MedicDate.API/bin/Debug/net5.0/MedicDate.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/MedicDate.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch Blazor WebAssembly App",
            "type": "blazorwasm",
            "request": "launch",
            "browser": "edge",
            "cwd": "${workspaceFolder}/MedicDate.Client"
        }
    ],
    "compounds": [
        {
            "name": "Launch Blazor Wasm and API",
            "configurations": [
                ".NET Core Launch (web)",
                "Launch Blazor WebAssembly App"
            ]
        }
    ]
}

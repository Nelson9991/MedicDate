@page "/pacienteList"
@using MedicDate.API.DTOs.Paciente

<div class="row">
	<div class="col-12 text-left">
		<h2 class="text-primary">Pacientes</h2>
	</div>
	<div class="col-12 d-flex flex-column flex-md-row mt-3 mb-2 mb-md-0">
		<div>
			<span>Filtrar por grupo:</span>
		</div>
		<div class="pl-md-3">
			<RadzenDropDown AllowClear="true" TValue="string" Style="width: 300px" Data="_grupoList"
				AllowVirtualization="true" Placeholder="Seleccione" Change="@FilterByGrupo" TextProperty="Nombre"
				ValueProperty="Id" />
		</div>
	</div>
	<div class="col-12">
		<RadzenGenericGrid TItem="PacienteResponseDto" TotalCount="@_totalCount" ItemList="@_pacienteList"
			OpRoutes="@_opRoutes" OnDeleteData="@DeleteMedico" PropNames="_propNames" Headers="_headers">
			<CustomGridCols>
				<RadzenDataGridColumn TItem="PacienteResponseDto" Title="Fecha Nacimiento" Property="FechaNacimiento">
					<Template Context="paciente">
						@paciente.FechaNacimiento.ToString("d")
					</Template>
				</RadzenDataGridColumn>

				<RadzenDataGridColumn TItem="PacienteResponseDto" Title="Grupos" Filterable="false" Sortable="false">
					<Template Context="paciente">
						<div class="d-flex flex-row flex-wrap">
							@foreach (var item in paciente.Grupos)
							{
								<div>
									<span class="text-primary" style="font-weight: 700;">
										@(item.Nombre).&nbsp;&nbsp;
									</span>
								</div>
							}
						</div>
					</Template>
				</RadzenDataGridColumn>
			</CustomGridCols>
		</RadzenGenericGrid>
	</div>
</div>

@page "/pacienteList"
@inherits PacienteListBase


<div class="row">
    <div class="col-auto col-md-6 text-start">
        <h2 class="text-radzen-secondary">Pacientes</h2>
    </div>
    <div class="d-flex flex-column flex-md-row mt-3 mb-2 mb-md-0">
        <div>
            <span>Filtrar por grupo</span>
        </div>
        <div class="ps-md-3">
            <RadzenDropDown AllowClear="true" TValue="string"
                            Style="width: 300px" Data="Grupos"
                            AllowVirtualization="true" Placeholder="Seleccione"
                            Change="@FilterByGrupo" TextProperty="Nombre"
                            ValueProperty="Id"/>
        </div>
    </div>
    <div class="col-12">
        <RadzenGenericGrid TItem="PacienteResponse" TotalCount="@TotalCount"
                           ItemList="@ItemList" OpRoutes="@OpRoutes"
                           OnDeleteData="@DeleteMedico" PropNames="PropNames"
                           Headers="Headers">
            <CustomGridCols>
                <RadzenDataGridColumn TItem="PacienteResponse" Title="Fecha Nacimiento"
                                      Property="FechaNacimiento">
                    <Template Context="paciente">
                        @paciente.FechaNacimiento.ToString("d")
                    </Template>
                </RadzenDataGridColumn>

                <RadzenDataGridColumn TItem="PacienteResponse" Title="Grupos"
                                      Filterable="false" Sortable="false">
                    <Template Context="paciente">
                        <div class="d-flex flex-row flex-wrap">
                            @foreach (var item in paciente.Grupos)
                            {
                                <div>
                                    <span class="text-radzen-primary" style="font-weight: 700;">
                                        @(item.Nombre).&nbsp;&nbsp;
                                    </span>
                                </div>}

                        </div>
                    </Template>
                </RadzenDataGridColumn>
            </CustomGridCols>
        </RadzenGenericGrid>
    </div>
</div>

